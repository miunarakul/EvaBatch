<!DOCTYPE html>
<html>
<head>
    <!-- start: META -->
    <meta http-equiv="Content-Type" content="text/html" ; charset="utf-8" />
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content="IE=edge,IE=9,IE=8,chrome=1" /><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="application-name" content="Login Local Application" />
    <meta name="author" content="Thitiphol Chernkraw" />
    <!-- end: META -->

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
    <title>EvaBatch: @ViewBag.Title</title>

    @RenderSection("csses", required: false)
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/select2")
    @Styles.Render("~/Content/formvalidator")

</head> 
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EVA Batch Controlled", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="padding-top: 8px;">
                    <li>
                        <div class="dropdown">
                            <button class="btn btn-success" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @Html.ActionLink("NewDocument", "Index", "Home")
                            </button>
                            <div class="dropdown-menu btn btn-sm btn-success" aria-labelledby="dropdownMenuButton">
                                <ul>
                                    <li class="dropdown-item col-12">
                                        @Html.ActionLink("EVA", "Index", "EVA")
                                    </li>
                                    <li class="dropdown-item  col-12">
                                        @Html.ActionLink("BB", "Index", "BB")
                                    </li>
                                    <li class="dropdown-item  col-12">
                                        @Html.ActionLink("EPA", "Index", "EPA")
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>

                    <li>
                        <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @Html.ActionLink("AllDocument", "Index", "AllDocument")
                        </button>
                      
                    </li>
                    <li>
                        <div class="dropdown">
                            <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @Html.ActionLink("Administator", "Index", "Home")
                            </button>
                            <div class="dropdown-menu btn btn-primary" aria-labelledby="dropdownMenuButton">
                                <ul>
                                    <li class="dropdown-item">
                                        @Html.ActionLink("Customer List", "Index", "Customer_List")
                                    </li>
                                    <li class="dropdown-item">
                                        @Html.ActionLink("User management", "Index", "User_management")
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                <ul class="nav navbar-nav-right">
                    <form id="formLogout" name="formLogout" class="navbar-form navbar-right" action="@Url.Action("Logout", "Login")" method="post">
                        <a class="navbar-link" style="padding-right: 15px;"><span class="glyphicon glyphicon-user"></span> @Session["FULL_NAME"].ToString() </a>
                        <button type="submit" class="btn btn-danger" style="margin: 0 !important; padding: 6px 10px; font-size: 0.9rem !important;">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span> Log out
                        </button>
                    </form>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EvaBatch Celestica.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jTable")
    @Scripts.Render("~/bundles/formvalidator")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/noty")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/Content/datatables")
    @RenderSection("scripts", required: false)
</body>
</html>
